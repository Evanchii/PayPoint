<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:orientation="vertical"
    tools:context="xyz.paypnt.paypoint.Splashscreen" >

    <LinearLayout
        android:id="@+id/ss_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ss_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ss_logoPin"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/ss_logoText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/text_logo_yellow" />

    </LinearLayout>

    <View
        android:id="@+id/ss_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="50dp"
        android:background="#FFCE00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ss_car"
        android:layout_width="122dp"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="32dp"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/ss_line"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/car_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>