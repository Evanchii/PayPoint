<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.paypnt.paypoint.MainActivity">

    <LinearLayout
        android:id="@+id/signup_banner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#2b2b2b"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/main_logotext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:contentDescription="@string/text_logo"
            app:srcCompat="@drawable/text_logo_yellow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2b2b2b"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_banner">

        <Button
            android:id="@+id/main_login"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/main_font"
            android:text="@string/login"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:theme="@style/Button.White" />

        <Button
            android:id="@+id/main_signup"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/main_font"
            android:text="@string/signup"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:theme="@style/Button.White" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>